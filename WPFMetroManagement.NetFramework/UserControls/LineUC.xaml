                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="{Binding txtUpdateLineStart, UpdateSourceTrigger=PropertyChanged}" />
                                <ComboBox Width="200"
                                          ItemsSource="{Binding ListStation}"
                                          SelectedItem="{Binding selectedStationStart}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding id}" />
                                                <TextBlock Text=" - " />
                                                <TextBlock Text="{Binding stationName}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="20,5,5,5"
                                        DockPanel.Dock="Top"
                                        Orientation="Horizontal">
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="Line End: " />
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="{Binding txtUpdateLineEnd, UpdateSourceTrigger=PropertyChanged}" />
                                <ComboBox Width="200"
                                          ItemsSource="{Binding ListStation}"
                                          SelectedItem="{Binding selectedStationEnd}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding id}" />
                                                <TextBlock Text=" - " />
                                                <TextBlock Text="{Binding stationName}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="20,5,5,5"
                                        DockPanel.Dock="Top"
                                        Orientation="Horizontal">
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="Line Type: " />
                                <TextBlock MaxWidth="300"
                                           Margin="0,3.5"
                                           FontSize="15"
                                           Text="{Binding txtUpdateLineType, UpdateSourceTrigger=PropertyChanged}"
                                           TextWrapping="Wrap" />
                                <ComboBox x:Name="cbbLineType"
                                          materialDesign:HintAssist.Hint="Line Type"
                                          Width="220"
                                          FontSize="15"
                                          Margin="0, 3.5"
                                          SelectedItem="{Binding txtUpdateLineType, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBoxItem Content="Regular" />
                                    <ComboBoxItem Content="Express" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="20,5,5,5"
                                        DockPanel.Dock="Top"
                                        Orientation="Horizontal">
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="Open Time: " />
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="{Binding txtUpdateOpenTime, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox MinWidth="200"
                                         MaxWidth="200"
                                         FontSize="15"
                                         Text="{Binding txtUpdateOpenTime, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="20,5,5,5"
                                        DockPanel.Dock="Top"
                                        Orientation="Horizontal">
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="Waiting Time: " />
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="{Binding txtUpdateWaitTime, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox MinWidth="200"
                                         MaxWidth="200"
                                         FontSize="15"
                                         Text="{Binding txtUpdateWaitTime, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="20,5,5,5"
                                        DockPanel.Dock="Top"
                                        Orientation="Horizontal">
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="Close Time: " />
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="{Binding txtUpdateCloseTime, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox MinWidth="200"
                                         MaxWidth="200"
                                         FontSize="15"
                                         Text="{Binding txtUpdateCloseTime, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="20,5,5,5"
                                        DockPanel.Dock="Top"
                                        Orientation="Horizontal">
                                <TextBlock Margin="0,3.5"
                                           FontSize="15"
                                           Text="Status: " />
                                <TextBlock MaxWidth="300"
                                           Margin="0,3.5"
                                           FontSize="15"
                                           Text="{Binding txtUpdateLineStatus, UpdateSourceTrigger=PropertyChanged}"
                                           TextWrapping="Wrap" />
                                <ComboBox x:Name="cbbLineStatus"
                                          materialDesign:HintAssist.Hint="Line Status"
                                          Width="220"
                                          FontSize="15"
                                          Margin="0, 3.5"
                                          SelectedItem="{Binding txtUpdateLineStatus, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBoxItem Content="Active" />
                                    <ComboBoxItem Content="Inactive" />
                                </ComboBox>
                            </StackPanel>
                            <Canvas Margin="10"
                                    Visibility="Collapsed">
                                <Button Canvas.Left="288"
                                        Canvas.Top="-6"
                                        Width="116"
                                        Command="{Binding SaveUpdateCommand}"
                                        CommandParameter="{Binding ElementName=pnlLineInformation}"
                                        Background="{StaticResource LightBlue}"
                                        BorderBrush="{StaticResource LightBlue}"
                                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                        ToolTip="Save Updated"
                                        Content="Save Changes" />
                            </Canvas>
                        </DockPanel>
                    </DockPanel>
                </DockPanel>
            </DockPanel>
        </materialDesign:Card>

        <DockPanel LastChildFill="True"
                   Background="White">
            <materialDesign:ColorZone Width="400"
                                      Margin="10"
                                      Padding="8,4,8,4"
                                      Panel.ZIndex="1"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                      CornerRadius="6"
                                      DockPanel.Dock="Top"
                                      Mode="Standard">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding SearchCommand}"
                            CommandParameter="{Binding ElementName=plnShowLine}"
                            Style="{DynamicResource MaterialDesignToolButton}">
                        <materialDesign:PackIcon Kind="DatabaseSearch"
                                                 Opacity=".56" />
                    </Button>
                    <TextBox Grid.Column="1"
                             MinWidth="200"
                             Margin="8,0,0,0"
                             VerticalAlignment="Center"
                             materialDesign:HintAssist.Hint="Search Line by name..."
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                             BorderThickness="0"
                             Text="{Binding txtSearchLine, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </materialDesign:ColorZone>

            <ScrollViewer Margin="5"
                          Padding="10,0,10,0">
                <DataGrid x:Name="dataLine"
                          VerticalContentAlignment="Top"
                          AutoGenerateColumns="False"
                          Background="Transparent"
                          CanUserAddRows="False"
                          CanUserSortColumns="True"
                          HeadersVisibility="All"
                          HorizontalScrollBarVisibility="Auto"
                          IsReadOnly="True"
                          SelectedIndex="0"
                          ItemsSource="{Binding ListLine, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedLine, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction Command="{Binding LoadListLineCommand}"
                                                   CommandParameter="{Binding ElementName=dataLine}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding id}"
                                            Header="ID"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding idCompany}"
                                            Header="ComID"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding lineName}"
                                            Header="Name"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding Station1.stationName}"
                                            Header="Station Start"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding Station.stationName}"
                                            Header="Station End"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding lineType}"
                                            Header="Type"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding openTime}"
                                            Header="Open"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding awTime}"
                                            Header="Waiting"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding closeTime}"
                                            Header="Close"
                                            IsReadOnly="False"
                                            Width="auto" />
                        <DataGridTextColumn Binding="{Binding statusLine}"
                                            Header="Status"
                                            IsReadOnly="False"
                                            Width="auto" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </DockPanel>
    </DockPanel>
</UserControl>
